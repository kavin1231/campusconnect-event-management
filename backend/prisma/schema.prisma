// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema


generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Student {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  password     String
  studentId    String   @unique
  department   String
  year         Int
  createdAt    DateTime @default(now())
}

enum Role {
  STUDENT
  EVENT_ORGANIZER
  SYSTEM_ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
}

model Event {
  id              Int      @id @default(autoincrement())
  title           String
  description     String
  date            DateTime
  category        String
  location        String
  image           String
  registeredCount Int      @default(0)
  createdAt       DateTime @default(now())
}
